<view class="container page-order">
  <template is="ticket-info" />
  <view class="flex-column ordered">
    <view class="info-item">订单号：29394404</view>
    <view class="info-item">下单时间：2016.09.09 19:20</view>
  </view>
  <view class="order-wrap">
    <template is="order-before-pay" />
  </view>
  <view class="weui-cells">
    <view class="weui-cell">
      <view class="weui-cell__bd">联系人电话 18039304940</view>
      <view class="weui-cell__ft"></view>
    </view>
  </view>
  <view class="weui-cells">
    <navigator url="" class="weui-cell" hover-class="weui-cell_active">
      <view class="weui-cell__bd">订单须知</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
  <view class="ft-topay">
    <view class="weui-cell" hover-class="weui-cell_active">
      <view class="weui-cell__bd">
        <button class="cancel-btn" type="default" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}">取消</button>
      </view>
      <view class="weui-cell__bd">
        <button bindtap="payOrder"  class="topay-btn" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}">去支付</button>
      </view>
    </view>
  </view>
</view>