.booking-wrap{
  background-color: #fff;
  margin: 30rpx;
  border-radius: 20rpx;
}
.selects-wrap .weui-cell__ft_in-access{
  padding-right: 40rpx;
}

.selects-wrap{
  position: relative;
  margin: 0
}

.selects-wrap::before{
    border:0;
}
.selects-wrap .weui-cell {
  height: 120rpx;
}

.selects-wrap .weui-cell .active {
  color: #2c2c2c;
}

.selects-wrap .weui-cell::before {
  left: 0;
}
.selects-wrap picker{
  border-top:1px #e5e5e5 solid;
}


.search {
  padding: 27rpx 30rpx 50rpx 30rpx;
}

.search button {
  height: 88rpx;
  line-height: 88rpx;
}

.toggle-direction {
  position: absolute;
  background-color: #fff;
  left: 50%;
  top: 120rpx;
  height: 46rpx;
  width: 46rpx;
  margin-top: -23rpx;
  margin-left: -23rpx;
  z-index: 999;
  border-radius: 50%;
}

.toggle-direction image {
  width: 100%;
  height: 100%;
}