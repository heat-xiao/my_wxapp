/**index.wxss**/

.top-nav {
  height: 188rpx;
  background-color: #4a90e2;
  color: #fff;
  font-size: 24rpx;
}

.top-nav .nav-item {
  flex: 1;
  text-align: center;
}

.top-nav .nav-item image {
  width: 68rpx;
  height: 68rpx;
  vertical-align: middle;
  margin: 0 0 8rpx 0;
}

.booking-wrap {
  background-color: #fff;
}

.booking-wrap .weui-cells__title {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  margin: 0;
  color: #2c2c2c;
}

.booking-wrap .weui-cell {
  height: 120rpx;
}

.booking-wrap .weui-cell .active {
  color: #2c2c2c;
}

.booking-wrap .weui-cell::before {
  left: -30rpx;
}

.booking-wrap .weui-cell__ft_in-access {
  padding-right: 40rpx;
}

.booking-wrap picker {
  border-top: 1px #e5e5e5 solid;
}

.booking-wrap .search {
  padding: 20rpx 30rpx;
}

.booking-wrap .search button {
  height: 88rpx;
  line-height: 88rpx;
}

.booking-wrap .toggle-direction {
  position: absolute;
  background-color: #fff;
  left: 50%;
  top: 120rpx;
  height: 46rpx;
  width: 46rpx;
  margin-top: -23rpx;
  margin-left: -23rpx;
  z-index: 999;
  border-radius: 50%;
}

.booking-wrap .toggle-direction image {
  width: 100%;
  height: 100%;
}

.bn-list {
  margin: 24rpx 0 0 0;
}

.bn-list .weui-media-box__title {
  font-size: 32rpx;
  padding: 0 0 10rpx 0;
}

.bn-list .weui-media-box__hd_in-appmsg {
  margin: 0 0 0 20rpx;
}

.bn-list image {
  width: 240rpx;
  height: 160rpx;
  vertical-align: middle;
}
