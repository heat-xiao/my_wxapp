.drawer_screen { 
  width: 100%; 
  height: 100%; 
  position: fixed;  
  top: 0; 
  left: 0; 
  z-index: 1000; 
  background: #000; 
  opacity: 0.5; 
  overflow: hidden; 
} 
.drawer_box { 
  width: 500rpx;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
  position: absolute; 
  z-index: 1001; 
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx; 
  text-align: center;
}
.drawer_title{  
  font-size:32rpx;
  height: 100rpx;
  line-height: 100rpx;
} 
.drawer_content{
  padding: 30rpx;
}
.sureQuery{
  width: 100%;
  display: flex;
  height: 100rpx;
  margin: 20rpx 0 0 0;
}

.sureQuery .btn{
  flex: 1;
  line-height: 120rpx;
  font-size: 30rpx;
}
.sureQuery .btn.btnSure{
  color:#3399ff;
}

