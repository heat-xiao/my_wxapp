.route {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: #4a90e2;
  color: #fff;
}

.route .duration {
  font-size: 22rpx;
}

.toggle-date {
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0;
}

.toggle-date .weui-cell__ft_in-access{
    width:98rpx;
    height:98rpx;
    padding: 0
}

.toggle-date .decrease:after {
  transform: rotate(225deg);
  left:40rpx;
}

.toggle-date .increase:after {
  right:40rpx;
}

.toggle-date .cur-date {
  flex: 1;
  text-align: center;
}

