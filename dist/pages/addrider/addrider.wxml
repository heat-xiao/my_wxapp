<view class="weui-cells">
  <view class="weui-cell" hover-class="weui-cell_active">
    <view class="weui-cell__label">姓名</view>
    <view class="weui-cell__bd weui-cell__ft_in-access">
      <input class="weui-input" placeholder="乘车人姓名" />
    </view>
  </view>
  <view class="weui-cell" hover-class="weui-cell_active">
    <view class="weui-cell__label">证件</view>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" class="weui-cell__bd">
      <view class="weui-cell__ft_in-access">身份证</view>
    </picker>
  </view>

  <view class="weui-cell" hover-class="weui-cell_active">
    <view class="weui-cell__label">
     证件号
    </view>
    <view class="weui-cell__bd weui-cell__ft_in-access">
      <input class="weui-input" placeholder="填写证件号码" />
    </view>
  </view> 
</view>

<view class="addrider-btn">
  <button bindtap="searchTickets" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"> 查询 </button>
</view>