<view class="container page-index">
  <view class="top-nav flex-row">
    <view class="nav-item">
      <image src="{{iconUrl[0]}}"></image>
      <view>首页</view>
    </view>
    <view class="nav-item">
      <image src="{{iconUrl[1]}}"></image>
      <view>我的</view>
    </view>
    <view class="nav-item">
      <image src="{{iconUrl[2]}}"></image>
      <view>交通</view>
    </view>
    <view class="nav-item">
      <image src="{{iconUrl[3]}}"></image>
      <view>客服</view>
    </view>
  </view>
  <view class="booking-wrap">
    <view style="height: 98rpx;line-height: 98rpx;text-align: center;">订票</view>
    <view class="weui-cells selects-wrap">
      <navigator url="../setout/setout" class="weui-cell" hover-class="weui-cell_active">
        <view class="weui-cell__bd">出发地</view>
        <view class="weui-cell__ft weui-cell__ft_in-access {{setout ? 'active' : '' }}">{{setout ? setout : '选择' }}</view>
      </navigator>
      <view class="toggle-direction" bindtap="toggleDirection">
        <image src="{{iconUrl[4]}}"></image>
      </view>
      <navigator url="../destination/destination" class="weui-cell" hover-class="weui-cell_active">
        <view class="weui-cell__bd">目的地</view>
        <view class="weui-cell__ft weui-cell__ft_in-access  {{destination ? 'active' : '' }}">{{destination ? destination : '选择' }}</view>
      </navigator>
        
      <picker mode="date" value="{{date}}" start="{{todayDate}}" end="" bindchange="bindDateChange">
        <view class="weui-cell" hover-class="weui-cell_active">
          <view class="weui-cell__bd">出发时间</view>
          <view class="weui-cell__ft weui-cell__ft_in-access {{date ? 'active' : '' }}">
            <view class="picker">
              {{showDate}}
            </view>
          </view>
        </view>
      </picker>
    </view>
    <navigator url="../tickets/tickets?destination={{destination}}&setout={{setout}}&date={{date}}" class="search">
      <button bindtap="searchTickets" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"> 查询 </button>
    </navigator>
  </view>
  <view class="weui-panel weui-panel_access bn-list">
    <view class="weui-panel__bd">
      <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title">豪华游轮</view>
          <view class="weui-media-box__desc">由各种物质组成的巨型球状</view>
        </view>
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <image src="../../images/list.png" />
        </view>
      </navigator>
      <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title">豪华游轮载你游玩五湖四海</view>
          <view class="weui-media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>
        </view>
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <image src="../../images/list.png" />
        </view>
      </navigator>
    </view>
  </view>