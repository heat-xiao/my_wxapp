.top-nav {
  height: 188rpx;
  background-color: #4a90e2;
  color: #fff;
  font-size: 24rpx;
}

.top-nav .nav-item {
  flex: 1;
  text-align: center;
}

.top-nav .nav-item image {
  width: 68rpx;
  height: 68rpx;
  vertical-align: middle;
  margin: 0 0 8rpx 0;
}

.booking-wrap{
  background-color: #fff;
}
.selects-wrap .weui-cell__ft_in-access{
  padding-right: 40rpx;
}

.selects-wrap{
  position: relative;
  margin: 0
}

.selects-wrap .weui-cell {
  height: 120rpx;
}

.selects-wrap .weui-cell .active {
  color: #2c2c2c;
}

.selects-wrap .weui-cell::before {
  left: -30rpx;
}
.selects-wrap picker{
  border-top:1px #e5e5e5 solid;
}


.search {
  padding: 27rpx 30rpx;
}

.search button {
  height: 88rpx;
  line-height: 88rpx;
}

.toggle-direction {
  position: absolute;
  background-color: #fff;
  left: 50%;
  top: 120rpx;
  height: 46rpx;
  width: 46rpx;
  margin-top: -23rpx;
  margin-left: -23rpx;
  z-index: 999;
  border-radius: 50%;
}

.toggle-direction image {
  width: 100%;
  height: 100%;
}

.bn-list {
  margin: 24rpx 0 0 0;
}

.bn-list .weui-media-box__title {
  font-size: 32rpx;
  padding: 0 0 10rpx 0;
}
.bn-list .weui-media-box__hd_in-appmsg{
  margin: 0 0 0 20rpx;
}
.bn-list image {
  width: 240rpx;
  height: 160rpx;
  vertical-align: middle;
}
