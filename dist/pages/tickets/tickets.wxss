.route {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: #4a90e2;
  color: #fff;
}

.route .duration {
  font-size: 22rpx;
}

.toggle-date {
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0;
}

.toggle-date .weui-cell__ft_in-access{
    width:98rpx;
    height:98rpx;
    padding: 0
}

.toggle-date .decrease:after {
  transform: rotate(225deg);
  left:40rpx;
}

.toggle-date .increase:after {
  right:40rpx;
}

.toggle-date .cur-date {
  flex: 1;
  text-align: center;
}

.ticket-item .left {
  font-size: 36rpx;
  color: #4a90e2;
  width: 104rpx;
}

.ticket-item .center {
  flex: 1;
  padding: 0 26rpx;
  font-size: 26rpx;
}
.weui-panel.ticket-list{
    margin: 0
}

.ticket-item .center>view::before{
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-color: #c2cddb;
    color: #fff;
    border-radius: 50%;
    font-size: 20rpx;
    text-align: center;
    display: inline-block;
    margin: 6rpx 15rpx 0 0;
    vertical-align: top;
}

.ticket-item{
    color: #858585
}
.ticket-item .center .start::before{
    content: "始";   
}
.ticket-item .center .end{
    margin: 8rpx 0 0 0;
}
.ticket-item .center .end::before{
    content: "终";
}

.ticket-item .right .stock{
    font-size: 26rpx;
}

.ticket-item .right .price{
    font-size: 36rpx;
    color: #f5a623;
    padding: 10rpx 0 0 0;
    text-align: right
}

.ticket-item .right .price::before{
    content: "¥";
}

.weui-media-box::before {
    left:-30rpx;
}