.ticket-info {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: #4a90e2;
  color: #fff;
  padding: 40rpx 50rpx;
  height: 236rpx;
}

.order-info{
  display: flex;
  width: 100%;
  height: 155rpx;
  flex-direction: column;
  justify-content: center;
  padding: 0 30rpx;
  }
.order-info .info-item{
  padding: 5rpx 0;
  font-size: 26rpx;
}
.route {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: #4a90e2;
  color: #fff;
  padding: 50rpx 0;
  font-size: 36rpx;
}

.ticket-info .line {
  flex: 1;
  padding: 0 40rpx;
  text-align: center;
}

.line image {
  height: 1rpx;
  width: 100%;
  vertical-align: middle;
}

.setout image, .duration image {
  height: 36rpx;
  width: 36rpx;
  vertical-align: middle;
  display: inline-block;
  margin: 0 6rpx 0 0;
}

.user-info .weui-cells_after-title {
  margin: 0 0 20rpx 0;
}

.user-info .weui-cell {
  padding: 0 30rpx;
  height: 91rpx;
}

.user-info .delete {
  color: #ea5e78;
  font-size: 30rpx;
}

.add-user .weui-cell__bd{
  color: #4a90e2;
}

.add-user  image{
  margin: -4rpx 10rpx 0 0 ;
  vertical-align: middle;
  width: 28rpx;
  height: 28rpx;
}

.order-confirm{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 139rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    background-color: #fff;
    padding: 0 30rpx;
}

.order-confirm .total-price{
    flex: 1;
    padding: 0 30rpx;
    font-size: 36rpx;
    color: #f5a623;
}

