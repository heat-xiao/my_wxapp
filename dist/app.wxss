@import 'style/weui.wxss';

button{
    background-color: #4a90e2;
    color: #fff;
    font-size: 30rpx;
}

page{
    background-color: #F8F8F8;
    font-size: 30rpx;
    font-family: "微软雅黑";
    color: #2c2c2c;
}
.weui-cell {
    padding: 20rpx 30rpx;
}

.weui-media-box{
    padding:30rpx;
}

.weui-media-box__hd_in-appmsg {
    width: auto;
    height: auto
}

.weui-cell::before, .weui-cell::after{
    border-top:1px #e5e5e5 solid
}

.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}