@import 'style/weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 30rpx;
  font-family: "微软雅黑";
  color: #2c2c2c;
}

button {
  background-color: #4a90e2;
  color: #fff;
  font-size: 30rpx;
}

.weui-cells{
  margin: 0
}

.weui-cell {
  padding: 0 30rpx;
}

.weui-media-box {
  padding: 30rpx;
}

.weui-media-box__hd_in-appmsg {
  width: auto;
  height: auto;
}

/*----------common style----------*/

.flex-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.flex-column {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.price::before {
  content: "¥";
}

/*--------------------------------*/

/*------------头部车票信息------------*/

.ticket-info {
  background-color: #4a90e2;
  color: #fff;
  height: 236rpx;
}

.ticket-info .time .hour {
  padding: 0 10rpx;
}

.ticket-info .route {
  padding: 30rpx;
  font-size: 36rpx;
}

.ticket-info .route .line {
  flex: 1;
  padding: 0 20rpx;
  text-align: center;
}

.ticket-info .route .line image {
  height: 1rpx;
  width: 100%;
  vertical-align: middle;
}

.ticket-info .setout image, .ticket-info .duration image {
  height: 36rpx;
  width: 36rpx;
  vertical-align: middle;
  display: inline-block;
  margin: 0 10rpx 0 0;
}

/*--------------------------------*/

/*---------底部固定购物信息---------*/

.ft-fixed-cart {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 139rpx;
  background-color: #fff;
}

.ft-fixed-cart .price {
  flex: 1;
  padding: 0 30rpx;
  font-size: 36rpx;
  color: #f5a623;
}

.ft-fixed-cart button {
  width: 208rpx;
  height: 88rpx;
  line-height: 88rpx;
}

/*------------订单信息模板-----------*/
.page-order .weui-cells{
  margin: 0 0 20rpx 0;
  font-size: 26rpx;
}
.page-order .weui-cell {
  height: 91rpx;
}
.page-order .weui-cell::before{
  right: 30rpx; 
}
.order-wrap .price {
  font-size: 30rpx;
}

.page-order .center{
  text-align: center;
}

/*-------------------------------*/

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}
