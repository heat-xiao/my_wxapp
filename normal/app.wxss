@import 'style/weui.wxss';

page {
  background-color: #efeff4;
  font-size: 16px;
  font-family: '微软雅黑', Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', Arial, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/*自定義常用公共樣式*/

.line {
  height: 20rpx;
  width: 100%;
  background: #efeff4;
  clear: both;
}

.bottom_border {
  border-bottom: 1rpx solid #e5e5e5;
}

.white_bg {
  background: #fff;
  overflow: hidden;
}

.primary_color {
  color: #158447;
}

pull_left {
  float: left;
}

pull_right {
  float: right;
}

.weui-loadmore__tips_in-line {
  font-size: 24rpx;
  color:#ccc;
  background: transparent;
}
.gray_text{
  color:#ccc;
  font-size:26rpx;
}

.text_center{
  text-align: center;
}

.tip_top{
  padding-top:360rpx;
}