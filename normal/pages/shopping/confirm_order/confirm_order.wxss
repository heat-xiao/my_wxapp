.confirm_order_list_box .weui-flex {
  padding: 20rpx 0 0 0;
}

.confirm_order_commodity_icon {
  width: 134rpx;
  height: 134rpx;
  margin: 20rpx 20rpx 0 40rpx;
}

.confirm_order_commodity_info {
  height: 168rpx;
  overflow: hidden;
}

.confirm_order_commodity_name {
  margin-top: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 72rpx;
  overflow: hidden;
}

.confirm_order_commodity_name, .confirm_order_commodity_price {
  color: #222;
  font-size: 26rpx;
  margin-right: 28rpx;
}

.confirm_order_commodity_price {
  margin-top: 16rpx;
  color: #e04904;
}

.confirm_order_count {
  float: right;
  color: #999;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.confirm_order .weui-cell__bd {
  font-size: 30rpx;
}

.confirm_order_score_money {
  margin-left: 20rpx;
  color: #999;
  font-size: 26rpx;
}

.confirm_order_total_price {
  color: #e04904;
  font-size: 30rpx;
}

.confirm_order_default_btn {
  background: #f7f7fa;
  font-size: 26rpx;
  padding: 38rpx 0;
}

.confirm_order_total_pay {
  margin-left: 30rpx;
}

.confirm_order_pay_btn {
  background: #158447;
  text-align: center;
  color: #fff;
  padding: 24rpx 108rpx;
  font-size: 30rpx;
  border-radius: 0;
}

.confirm_order_total_pay_text {
  color: #158447;
}

.confirm_order_pay_box {
  position: fixed;
  bottom: -10rpx;
  width: 100%;
}

.confirm_order_to {
  color: #999;
  font-size: 26rpx;
  margin-right: 30rpx;
  line-height: 120rpx;
}

.confirm_order_address_box {
  height: 150rpx;
  overflow: hidden;
}

.confirm_order_address_line_height {
  margin-top: 18rpx;
  height: 80rpx;
  overflow: hidden;
}

.confirm_order_address {
  color: #222;
  font-size: 26rpx;
}

.conrim_order_bottom_gap {
  height: 200rpx;
  width: 100%;
}

.order_remark_input {
  font-size: 26rpx;
  color: #222;
  margin: 10rpx 0;
}

.order_remark_input::-webkit-input-placeholder {
  color: #999;
  font-family: '微软雅黑', Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', Arial, sans-serif;
}

.confirm_order_unset_address {
  margin-left: 60rpx;
  line-height: 80rpx;
  color: #ccc;
  font-size: 28rpx;
}
