.shopping_commodity_icon {
  width: 134rpx;
  height: 134rpx;
  margin: 20rpx 20rpx 20rpx -10rpx;
}

.shopping_commodity_name {
  height: 72rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 20rpx;
}

.shopping_count_btn {
  background: #f8f8f8;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  display: inline-block;
  text-align: center;
  color: #353535;
}

.shopping_commodity_count_box {
  float: right;
}

.shopping_commodity_count {
  font-size: 26rpx;
  margin: 0 20rpx;
  color: #353535;
}

.shopping_commodity_price {
  font-size: 30rpx;
  color: #e04904;
}

.shopping_commodity_info {
  margin-top: 20rpx;
}

.shopping_total_box {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}

.shopping_total_left {
  width: 65%;
  float: left;
  background: #f7f7fa;
}

.shopping_total_right {
  width: 35%;
  float: left;
  text-align: center;
  background: #158447;
  color: #fff;
}

.shopping_total_label {
  margin-left: 30rpx;
}

.shopping_total_price {
  color: #e04904;
}

.shopping_commodity_item {
  position: relative;
  overflow-x: scroll;
  overflow-y: hidden;
  padding: 0 20rpx;
}

.shopping_commodity_delete_btn {
  position: absolute;
  right: -120rpx;
  width: 120rpx;
  height: 100%;
  font-size:30rpx;
  line-height: 190rpx;
  text-align: center;
  background: #e04904;
  color: #fff;
}

.shopping_gap{
  width:100%;
  height:100rpx;
}