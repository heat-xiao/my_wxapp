.commodity_detail {
  width: 100%;
  padding-bottom: 100rpx;
}

.commodity_detail_picture {
  width: 100%;
}

.commodity_detail_name {
  color: #222;
  font-size: 30rpx;
  padding: 15rpx 22rpx 15rpx 30rpx;
}

.commodity_detail_price_new {
  color: #e04904;
  font-size: 30rpx;
}

.commodity_detail_price_old {
  text-decoration: line-through;
  font-size: 22rpx;
  color: #999;
  margin-left: 18rpx;
}

.commodity_detail_container {
  padding: 0 30rpx;
}

.commodity_discount_text {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.commodity_detail_info {
  color: #999;
  font-size: 24rpx;
  margin: 8rpx 0 16rpx 0;
  overflow: hidden;
}

.pull_left {
  float: left;
}

.pull_right {
  float: right;
}

.commodity_detail_comment {
  font-size: 26rpx;
  color: #999;
  padding: 34rpx 0 16rpx 0;
}

.commodity_detail_comment_list {
}

.commodity_detail_comment_item {
}

.commodity_detail_comment_user {
  padding: 18rpx 0 17rpx 0;
}

.commodity_detail_comment_avatar {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  background: #ccc;
  float: left;
}

.commodity_detail_comment_nickname {
  color: #222;
  font-size: 30rpx;
  margin-left: 18rpx;
}

.commodity_detail_comment_content {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 21rpx;
}

.commodity_detail_comment_time {
  font-size: 26rpx;
  color: #cecece;
  margin-bottom: 30rpx;
}

.commodity_detail_comment_link_all {
  font-size: 26rpx;
  color: #158447;
  text-align: center;
  margin: 24rpx 0;
}

.commodity_detail_comment_imgs image {
  width: 100%;
}

.commodity_detail_btn_box {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 98rpx;
  width: 100%;
  overflow: hidden;
  background: #f7f7fa;
}

.commodity_detail_btn_default {
  width: 40%;
  height: 98rpx;
  line-height: 98rpx;
  float: left;
  font-size: 30rpx;
  text-align: center;
  background: #f7f7fa;
  color: #158447;
}

.commodity_detail_btn_primary {
  color: #fff;
  background: #158447;
  width: 60%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  float: right;
}

/*选择属性和个数的遮罩层样式*/

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.commodity_info {
  padding: 24rpx 30rpx;
  overflow: hidden;
}

.commodity_attr_picture {
  width: 184rpx;
  height: 184rpx;
  display: block;
  float: left;
}

.commodity_attr_desc {
  float: left;
}

.commodity_attr_name {
  font-size: 30rpx;
  color: #222;
  overflow: hidden;
  height: 90rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.commodity_attr_info {
  width: 100%;
  overflow: hidden;
  position: relative;
}

.commodity_attr_padding_horizontal {
  position: absolute;
  left: 200rpx;
  overflow: hidden;
  padding-right: 20rpx;
  min-width: 500rpx;
}

.commodity_attr_price_box {
  margin-top: 28rpx;
}

.commodity_attr_storage {
  font-size: 26rpx;
}

.commodity_attr_group {
  width: 100%;
}

.commodity_attr_item {
  font-size: 30rpx;
  color: #222;
  padding-right: 30rpx;
}

.commodity_attr_value {
  float: left;
  font-size: 26rpx;
  color: #999;
  line-height: 48rpx;
  height: 48rpx;
  padding: 0 20rpx;
  border: 1rpx solid #999;
  border-radius: 10rpx;
  margin: 0 24rpx 24rpx 0;
}

.commodity_attr_count_btn {
  background: #f8f8f8;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  display: inline-block;
  text-align: center;
  color: #353535;
}

.commodity_attr_count {
  font-size: 26rpx;
  margin: 0 20rpx;
  color: #353535;
}

.commodity_attr_primary_btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #158447;
  color: #fff;
  z-index: 10000;
}

.commodity_detail_disabled_brn {
  border: 1rpx solid #cecece;
  color: #cecece;
  opacity: 0.5;
  float: left;
  font-size: 26rpx;
  line-height: 48rpx;
  height: 48rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
  margin: 0 24rpx 24rpx 0;
}

.commodity_attr_scroll {
  max-height: 400rpx;
  clear: both;
  overflow-y: scroll;
}

.attr_selected {
  background: #158447;
  border: 1px solid #fff;
  color: #fff;
}

.attr_default {
  background: #fff;
  border: 1px solid #999;
}

/*临时方案的样式*/

.commodity_attr_value_group {
  margin: 20rpx 20rpx 0 20rpx;
  float: left;
  font-size: 26rpx;
  color: #999;
  line-height: 48rpx;
  height: 48rpx;
  padding: 0 20rpx;
  border: 1rpx solid #999;
  border-radius: 10rpx;
}

.commodity_attr_group_tmp {
  width: 100%;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.commodity_detail_attr_gap {
  margin: 0 10rpx;
}
