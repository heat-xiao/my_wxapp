<view class="page">
  <view class="page__bd">
    <view class="weui-article">
      <view class="weui-article__section">
        <view class="weui-article__section">
          <view class="weui-article__p" wx:if="{{storeInfo.descType=='TEXT'}}">
            {{storeInfo.storeDesc}}
          </view>
          <view class="weui-article__p" wx:if="{{storeInfo.descType=='PICTURE'}}">
            <image class="weui-article__img" src="{{storeInfo.storePicture}}" mode="aspectFit" style="height: 180px" />
          </view>     
        </view>
      </view>
    </view>
  </view>
</view>