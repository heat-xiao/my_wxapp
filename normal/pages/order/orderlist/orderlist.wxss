.order_commodity_icon {
  width: 134rpx;
  height: 134rpx;
  margin: 0 20rpx 8rpx 20rpx;
}

.order_list .weui-cells__title {
  background: #fff;
}

.order_commodity_info {
  height: 144rpx;
  overflow: hidden;
}

.order_commodity_name, .order_commodity_price {
  color: #222;
  font-size: 26rpx;
  margin-right: 28rpx;
  height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order_commodity_price {
  margin-top: 26rpx;
}

.order_commodity_amounts {
  padding-top: 5rpx;
}

.bottom_border {
  border-bottom: 1px solid #e5e5e5;
}

.order_list_box {
  background: #f7f7fa;
}

.order_list_box .weui-cells__title {
  padding: 24rpx 30rpx;
  margin: 24rpx 0 0 0;
  font-size: 26rpx;
}

.order_list_box .weui-flex {
  padding: 20rpx 0 0 0;
}

.order_total_price {
  font-size: 26rpx;
  color: #222;
  padding: 24rpx 30rpx;
}

.order_default_btn, .order_primary_btn {
  width: 150rpx;
  height: 60rpx;
  float: right;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx 20rpx 0;
  border-radius: 10rpx;
}

.order_status_desc {
  width: 150rpx;
  height: 60rpx;
  float: right;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx 20rpx 0;
  color:#999;
}

.order_default_btn {
  background: #f8f8f8;
  color: #353535;
}

.order_primary_btn {
  background: #158447;
  color: #fff;
}

.order_postage {
  margin-left: 20rpx;
}

.pull_right {
  float: right;
}

.gray_text {
  color: #999;
  font-size: 24rpx;
}
