  line-height: 47rpx;
}

.contact_icon {
  background: url('data:image/png;base64,') no-repeat;
  background-size: cover;
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}

.bage_position {
  position: absolute;
  top: -15rpx;
  right: 52rpx;
}

.contact_position{
  height:100%;
  position: absolute;
  right:0;
