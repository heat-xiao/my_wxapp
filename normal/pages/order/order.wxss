  width: 100%;
  height: 300rpx;
  text-align: center;
}

.order_info_avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 27rpx;
  border: 1px solid #ccc;
}

.order_info_nickname {
  font-size: 30rpx;
}

.order_info_desc {
  font-size: 22rpx;
}

.order .weui-flex__item {
  text-align: center;
}

.order_type_box {
  margin: 30rpx 0 0 0;
  position: relative;
}

.order_type_icon {
  width: 40rpx;
  height: 40rpx;
}

.order_type_name {
  font-size: 26rpx;
  color: #4a4a4a;
  margin-top: -10rpx;
  margin-bottom: 10px;
