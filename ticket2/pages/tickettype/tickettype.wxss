.route {
  height: 120rpx;
  background-color: #7688d6;
  color: #fff;
}
.route .duration {
  font-size: 22rpx;
}

.toggle-date {
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0;
}
.toggle-date .weui-cell__ft_in-access{
  padding: 0
}
.toggle-date .decrease, .toggle-date .increase{
    height: 98rpx;
    width: 98rpx;
}
.toggle-date .decrease:after {
  transform: rotate(225deg);
  left:40rpx;
}

.toggle-date .increase:after {
  right:40rpx;
}

.toggle-date .cur-date {
  flex: 1;
  text-align: center;
}

.ticket-list .weui-cell{
    height: 160rpx;
}

.ticket-list .weui-cell::before {
    left:-30rpx;
}

.ticket-item .left {
