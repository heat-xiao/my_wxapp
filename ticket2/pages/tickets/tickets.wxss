.route {
  height: 120rpx;
  background-color: #7688d6;
  color: #fff;
}
.route .duration {
  font-size: 22rpx;
}
.toggle-date {
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0;
}
.toggle-date .weui-cell__ft_in-access{
  padding: 0
}
.toggle-date .decrease, .toggle-date .increase{
    height: 98rpx;
    width: 98rpx;
}
.toggle-date .decrease:after {
  transform: rotate(225deg);
  left:40rpx;
}

.toggle-date .increase:after {
  right:40rpx;
}

.toggle-date .cur-date {
  flex: 1;
  text-align: center;
}

.ticket-list .weui-cell{
    height: 160rpx;
}

.ticket-list .weui-cell::before {
    left:-30rpx;
}

.ticket-item .left {
  font-size: 36rpx;
  color: #4a90e2;
}

.ticket-item .center {
  padding: 0 26rpx;
  font-size: 26rpx;
}

.ticket-item .center>view::before{
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-color: #c2cddb;
    color: #fff;
    border-radius: 50%;
    font-size: 20rpx;
    text-align: center;
    display: inline-block;
    margin: 6rpx 15rpx 0 0;
    vertical-align: top;
}

.ticket-item{
    color: #858585
}
.ticket-item .end{
    margin: 8rpx 0 0 0;
}
.ticket-item .start::before{
    content: "始";   
}

.ticket-item .end::before{
    content: "终";
}

.ticket-item .stock{
    font-size: 26rpx;
}

.ticket-item .price{
    font-size: 36rpx;
    color: #ea5e78;
    padding: 16rpx 0 0 0;
    text-align: right;
}



.ticket-list.disabled .price{
    color: #bbbbbb
}