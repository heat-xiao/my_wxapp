.page_wrap {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
  font-family: "微软雅黑";
  font-size: 30rpx;
}

.search {
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
  padding: 16rpx;
  background-color: #efeff4;
  box-sizing: border-box;
  z-index: 999;

}

.search input{
  border:1px #e6e6ea solid;
  border-radius: 10rpx;
  height: 56rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  background-color: #fff;
}

.classify_page_left {
  width: 25%;
  height: 100%;
  background-color: #fafafa;
  border-right:1px #e5e5e5 solid;
  position: fixed;
  overflow: auto;
}

.category_wrap{
  margin: 88rpx 0 0 0;

}

.classify_page_right {
  width: 75%;
  height: 100%;
  left: 25%;
  position: fixed;
  overflow: auto;
}

/*template  css*/

.classify_recommendeds_right {
  background-color: #f4f5f7;
  width: 100%;
}

.classify_recommendeds_left {
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1rpx #e5e5e5 solid;
}

.classify_recommendeds_left.active{
  color: #158447;
  background-color: #fff;
  border-right: 1rpx #fff solid;
}


.classify_other_category {
  width: 100%;
  background-color: #f4f5f7;
  
}

.goodsCell_flex {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding:0 0 20rpx 0;
  background-color: white;
  margin: 88rpx 0 0 0;
}

.commodity-item{
    width: 100%;
    box-sizing: border-box;
    padding: 16rpx 20rpx;
    border-bottom: 1rpx #e5e5e5 solid;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}


.commodity-item .pic{
    text-align: center;
    margin-right: 20rpx
}
.commodity-item image{
    width: 135rpx;
    height: 135rpx
}
.commodity-item .title{
    height: 72rpx;
    display: flex;
    line-height: 35rpx;
    flex-direction: column;
    justify-content: center;
    margin: 16rpx 0 0 0;
    text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;
}

.commodity-item  .price{
   color: #e04904;
   margin:16rpx 0 10rpx 0;
}
.commodity-item  .price::before{
  content: "¥";
}

.commodity-item .info{
    position: relative
}

.commodity-item .info .count::before{
    content:"已售"
}

.commodity-item .info .count{
    position: absolute;
    right: 0;
    bottom: 4rpx;
    font-size: 24rpx;
    color: #999999;
}
