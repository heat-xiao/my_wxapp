page{
	width: 100%;
	height: 100%;
	position: relative;
	color: #222222;
    background-color: #F8F8F8;
    font-size: 30rpx;
    font-family:'微软雅黑',Helvetica Neue,Helvetica,sans-serif;
    -ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
	-webkit-tap-highlight-color: transparent;
}

.page__hd {
    padding: 80rpx;
}

.page__bd {
    padding-bottom: 80rpx;
}

.page__bd_spacing {
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.page__ft{
    padding-bottom: 20rpx;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 40rpx;
    font-weight: 400;
}

.page__desc {
    margin-top: 10rpx;
    color: #888888;
    text-align: left;
    font-size: 28rpx;
}

.button-sp-area {
    margin: 40rpx auto 0;
    width: 80%;
    text-align: center;
}

.mini-btn{
    margin-right: 10rpx;
}

.weui-form-preview {
    margin-top: 20rpx;
}

.btn-plus {
	position: fixed;
	bottom: 0;
	left: 0;
    display: block;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding-left: 28rpx;
    padding-right: 28rpx;
    box-sizing: border-box;
    font-size: 36rpx;
    text-align: center;
    text-decoration: none;
    color: #479de6;
    background-color: #fff;
    line-height: 2.55555556;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    overflow: hidden;
}

.btn-plus:after {
    content: " ";
    width: 200%;
    height: 200%;
    position: absolute;
    top: 0;
    left: 0;
    border-top: 2rpx solid #E5E5E5;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    box-sizing: border-box;
    border-radius: 0;
}

.btn-plus .icon {
    margin-bottom: 4rpx;
    margin-right: 10rpx;
    vertical-align: middle;
    width:40rpx; 
    height: 40rpx;
}

.text-orangered {
    color: orangered;
}

.weui-cell.weui-cell_textarea {
    -webkit-box-align: start;
    -webkit-align-items: flex-start;
    align-items: flex-start;
    padding-right: 70rpx;
}

.weui-cell_textarea .weui-textarea-icon {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    width: 40rpx;
    height: 40rpx;
}

.weui-cell_textarea .weui-textarea-icon image {
    width: 40rpx;
    height: 40rpx;
}

