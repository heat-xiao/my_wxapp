/**
 * 全局样式表
 * 使用@import语句可以导入外联样式表，@import后跟需要导入的外联样式表的相对路径，用;表示语句结束
 * 如果需要增加额外的WXSS样式表, 直接import即可, 但需注意引用顺序
 */
@import 'assets/styles/weui.wxss';
@import 'assets/styles/prompt.wxss';
@import 'assets/styles/skyvow.wxss';

image {
  width: 100%;
  vertical-align: middle;
  border: 0
}
button{
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
button.border {
  background-color: #fff;
  border: 1rpx solid #f45d49;
  color: #f45d49;
  line-height: 56rpx;
}

button.background {
  background-color: #f45d49;
  color: #fff;
}

.weui-cells {
  margin: 0;
}

.weui-cells::before, .weui-cells::after{
  border: 0;
}

.weui-cell {
  padding: 38rpx 30rpx;
  height: auto;
}

.weui-media-box {
  padding: 20rpx 30rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.flex-column {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.price {
  color: #f45d49;
  flex: 1;
}

.price::before {
  content: "¥";
}

.ft-cart {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  z-index: 9999;
}

.ft-cart .cart-icon {
  position: relative;
  padding: 0 44rpx;
}

.ft-cart .cart-icon image{
  width: 54rpx;
  height: 48rpx;
}

.ft-cart .price{
  font-size: 36rpx;
}

.ft-cart  .topay-btn {
  height: 100%;
  width: 220rpx;
  background-color: #f45d49;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  line-height: 96rpx;
}

.masklayer {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  z-index: 98;
}

.cart-info {
  position: fixed;
  width: 100%;
  background-color: #fff;
  z-index: 99;
  transition: all 0.3s ease;
  border-bottom: 1rpx #e5e5e5 solid;
}


.clear-cart {
  background-color: #efeff4;
  height: 80rpx;
  padding: 0 30rpx;
}

.clear-cart::before {
  border: 0;
}

.quantity-wrapper {
  height: 48rpx;
}

.quantity-wrapper image{
  width: 48rpx;
  height: 48rpx;
  vertical-align: top;
}

.quantity-wrapper .quantity {
  width: 60rpx;
  text-align: center;
}

.quantity-badge {
  position: absolute;
  top: 15rpx;
  right: 10rpx;
  height: 24rpx;
  min-width:24rpx;
  line-height: 24rpx;
  background-color: #d0011b;
  color: #fff;
  border-radius: 12rpx; 
  text-align: center;
  font-size: 16rpx;
  padding:0 4rpx;
  box-sizing: border-box;
}

.lastpage-tip{
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999999
}
